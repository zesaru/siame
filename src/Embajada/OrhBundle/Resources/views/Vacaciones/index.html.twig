{% extends "::base8.html.twig" %}

{#% block title %}Listado de Notas {% endblock %#}
{% block body %}
<style>
a{
    color: red;
    font-size: 16px;
}
.boton{
    background-color:#368EE0;
    color: white;
    font-weight: bold;
    margin-top: 5em;
    padding: 0.5em;
    text-decoration: none; 
}
ul{
    margin-top: 2em;
}
li{
    list-style-type: none;
}
.icon-ok-sign{
    color: green;
    font-size: 1.4em;
}
table tr td .aprobado{
    text-align: center;
}
</style>

<div class="row-fluid">

                    <div class="span12">
                        <div class="box box-color box-bordered green">
                            <div class="box-title">
                                <h3>
                                    <i class="icon-table"></i>
                                    Vacaciones
                                </h3>
                            </div>
                            <div class="box-content nopadding">
                                <table class="table table-hover table-nomargin table-striped dataTable dataTable-reorder">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Nombre y Apellidos</th>
                                            <th>Fechadesolitud</th>
                                            <th class='hidden-350'>DÃ­as</th>
                                            <th class='hidden-1024'>Comienza</th>
                                            <th class='hidden-480'>Termina</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for entity in entities %}
                                        <tr>
                                            <td><a href="{{ path('vacaciones_pdf', { 'id': entity.id }) }}"><i class="icon-file"></i></td></td></a>
                                            <td>{{ entity.name}}-{{ entity.apellidos}}</td>
                                            <td>{% if entity.fechadesolitud %}{{ entity.fechadesolitud|date('Y-m-d') }}{% endif %}
                                            </td>
                                            <td class='hidden-350'>{{ entity.cantidad }}</td>
                                            <td class='hidden-1024'>{% if entity.fechadeinicio %}{{ entity.fechadeinicio|date('d-m-Y') }}{% endif %}</td>
                                            <td class='hidden-480'>{% if entity.fechadefin %}{{ entity.fechadefin|date('d-m-Y') }}{% endif %}</td>
                                            <td class='hidden-480'>
                                                        <a href="{{ path('vacaciones_edit', { 'id': entity.id }) }}">editar</a>
                                            </td>
                                        </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
    <ul>
         <li >
            <a class="boton" href="{{ path('vacaciones_new') }}">
                Solicitar Vacaciones
                </a>
        </li>
    </ul>
{% endblock %}