{% extends "::base8.html.twig" %}

{#% block title %}Listado de Notas {% endblock %#}

{% block body %}
                <div class="row-fluid">
                    <ul class="minitiles">
                        <li class="active">
                            <a href="{{ path('vacaciones_new') }}">
                                Create a new entry
                            </a>
                        </li>
                    </ul>
                    <div class="span12">
                        <div class="box box-color box-bordered green">
                            <div class="box-title">
                                <h3>
                                    <i class="icon-table"></i>
                                    Vacaciones
                                </h3>
                            </div>
                            <div class="box-content nopadding">
                                <table class="table table-hover table-nomargin table-striped dataTable dataTable-reorder">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Nombre y Apellido</th>
                                            <th>Fechadesolitud</th>
                                            <th class='hidden-350'>Cantidad</th>
                                            <th class='hidden-1024'>Comienza</th>
                                            <th class='hidden-480'>Termina</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for entity in entities %}
                                        <tr>
                                            <td><a href="{{ path('vacaciones_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                            <td>{{ entity.personal.nombres }} {{ entity.personal.apellidos }}</td>
                                            <td>{% if entity.fechadesolitud %}{{ entity.fechadesolitud|date('d-m-Y') }}{% endif %}
                                            </td>
                                            <td class='hidden-350'>{{ entity.cantidad }}</td>
                                            <td class='hidden-1024'>{% if entity.fechadeinicio %}{{ entity.fechadeinicio|date('d-m-Y') }}{% endif %}</td>
                                            <td class='hidden-480'>{% if entity.fechadefin %}{{ entity.fechadefin|date('d-m-Y') }}{% endif %}</td>
                                            <td class='hidden-480'>
                                                <ul>
                                                    <li>
                                                        <a href="{{ path('vacaciones_show', { 'id': entity.id }) }}">show</a>
                                                    </li>
                                                    <li>
                                                        <a href="{{ path('vacaciones_edit', { 'id': entity.id }) }}">edit</a>
                                                    </li>
                                                </ul>
                                            </td>
                                        </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
{% endblock %}