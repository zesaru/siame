{% extends "::base8.html.twig" %}
{% block body %}
<h1>Vacaciones</h1>
<div class="row-fluid">
<div class="span1">
</div>    
    <div class="span6">
        <div class="box box-bordered box-color">
            <div class="box-title">
                <h3><i class="icon-th-list"></i> Informaci&oacute;n de la Solicitud</h3>
            </div>
            <div class="box-content nopadding">
                <form action="#" method="POST" class='form-horizontal form-bordered'>
                    <div class="control-group">
                        <label for="textfield" class="control-label">Nombre y Apellido</label>
                        <div class="controls">
                            <p style="padding-top: 5px;">{{ entity.ucreado }}</p>
                        </div>
                    </div>
                    <div class="control-group">
                        <label for="textfield" class="control-label">Fecha de Solicitud</label>
                        <div class="controls">
                            <p style="padding-top: 5px;">{{ entity.fechadesolitud|date('Y-m-d') }}</p>
                        </div>
                    </div>                                    
                    <div class="control-group">
                        <label for="password" class="control-label">D&iacute;as Solicitados</label>
                        <div class="controls">
                            <p style="padding-top: 5px;">{{ entity.cantidad}}</p>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Fecha de Inicio</label>
                        <div class="controls">
                            <p style="padding-top: 5px;">{{ entity.fechadeinicio|date('Y-m-d') }}</p>
                        </div>
                    </div>
                    <div class="control-group">
                        <label for="textfield" class="control-label">Fecha de Termino</label>
                        <div class="controls">
                            <p style="padding-top: 5px;">{{ entity.fechadefin|date('Y-m-d') }}</p>
                        </div>
                    </div>
                <div class="actions">

                </div>

                    <div class="box-content">
                        
                        <a href="{{ path('vacaciones_edit', { 'id': entity.id }) }}" style="background:#0066FF ; border-radius: 1px; color: #FFF; font-size: 15px; padding: .3em 1em; text-decoration: none;" >Editar</a>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock body %}
