											<td>{{vacaciones.fechadefin|date('d-m-Y')}}</td>
											<td >{{ vacaciones.cantidad }}</td>
										</tr>
										{% set total=total+vacaciones.cantidad %}
										{% endfor %}
										<tr>
											<td colspan="4"></td>
											<td class='taxes'>
													<span class="light">Total</span>
													<span class="totalprice">
														de {{total}} d√≠as
													</span>
												</p>
											</td>
										</tr>
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div></div>
	{% for vacaciones in vacaciones %}
