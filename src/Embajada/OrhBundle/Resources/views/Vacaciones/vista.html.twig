{% extends "::base8.html.twig" %}
{% block body %}
<div class="row-fluid">
    <div class="span12">
        <div class="box">
            <div class="box-title">
                                <h3>
                                    <i class="icon-table"></i>
                                    Tabla de Vacaciones
                                </h3>
                            </div>
                            <div class="box-content nopadding">
                                <table class="table table-hover table-nomargin table-condensed">
                                    <thead>
                                        <tr>
                                            <th>Nombres</th>

                                            {% for i in -10..40 %}        

                                                <th>
                                                    {{ 'now'| date('Y/m/d')|sumar_fechas(i)|fecha ('full','none','es')| mostrar_primer_caracter| upper}}
                                                </th>   
                                            {% endfor %} 
                                        </tr>
                                    </thead>
                                    <thead>
                                        <tr>
                                            <th>Apellidos</th>

                                            {% for i in -10..40 %}        
                                                <th>
                                                    {{ ('now'| date('Y/m/d')|sumar_fechas(i)|date ('d'))}}
                                                </th>   
                                            {% endfor %}   
 
                                        </tr>
                                    </thead>
    <tbody>

        <tr>
            <td></td>
 
        </tr>
        {% for entity in entities %}
        <tr>
            <td>{{ entity.nombres }}~{{ entity.apellidos }}</td>
            {% for i in -10..40 %}
            {% if  date('now'| date('Y/m/d')|sumar_fechas(i)) == date(entity.fechadeinicio) %}  
                {% for x in 0..100 if entity['numDias']+1 > x  %}
                    <td bgcolor="#1BE022">V</td>
                {% endfor %}
            {% else %}
                    <td>x</td>
            {% endif %}
            {% endfor %} 
        </tr>
        {% endfor %}
        </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>        
{% endblock body %}
     