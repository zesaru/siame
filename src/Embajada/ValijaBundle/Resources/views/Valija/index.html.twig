{% extends "::base8.html.twig" %}
{% block body %}
<style>
.enlaces{
    color: red;
    font-size: 16px;
}
.icon-ok-sign{
    color: green;
    font-size: 12px;
}
.aprobado{
    text-align: center;
}
</style>
<div class="row-fluid">
    <div class="span12">
        <div class="box box-color box-bordered green">
            <div class="box-title">
                <h3><a target="_blank" class="btn btn-success" href="{{ path('valija_new') }}"><i class="icon-plus-sign"></i>Agregar Valija </a></h3>
            </div>
        </div>
        <div class="box-content nopadding">
            <table class="table table-hover table-nomargin table-striped dataTable dataTable-reorder">
                <thead>
                    <tr>
                        <th>Guia</th>
                        <th>No.</th>
                        <th>Fecha de Envio</th>
                        <th>Items</th>
                        <th>Peso</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td class="aprobado"><a class="enlaces"href="{{ path('valija_pdf', { 'id': entity.id }) }}"><i class="icon-file"></i></a></td>
                        <td>{{ entity.numerodevalija }}</td>
                        <td>{% if entity.fecha %}{{ entity.fecha|date('Y-m-d') }}{% endif %}</td>
                        <td>{{ entity.cantidaddeitems }}</td>
                        <td>{{ entity.peso }}</td>
                        <td>
                        <a class="enlaces" href="{{ path('valija_edit', { 'id': entity.id }) }}">editar</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock body %}