{% extends "::base8.html.twig" %}
{% block body %}
<style type='text/css'>
textarea{
	height: 10em;
	width: 100%;
}
</style>
<br>
<div class="row-fluid">
	<div class="span12">
		<div class="box">
			<div class="box-title">
				<h3><i class="icon-list"></i> Crear</h3>
			</div>
			<div class="box-content">
				<form class="form-horizontal form-column" action="{{ path('hremision_create') }}" method="post" {{ 	form_enctype(form) }}>
				<div>
					<div class="span1">

					    {{ form_errors (form.numero) }} 
						{{ form_label (form.numero) }}  
						{{ form_widget (form.numero, { 'attr': {
	                    'class':"input-block-level",}}
	                        )}}
					</div>
					<div class="span2">
					    {{ form_errors (form.destino) }} 
						{{ form_label (form.destino) }}  
						{{ form_widget (form.destino, { 'attr': {
	                    'class':"input-block-level",}}
	                        )}}
					</div>
					<div class="span2">

					    {{ form_errors (form.fecha) }} 
						{{ form_label (form.fecha) }}  
						{{ form_widget (form.fecha, { 'attr': {'class':"input-block-level datepick",}}
						)}}
					</div>		
					<div class="span2">

					    {{ form_errors (form.ferencia) }} 
						{{ form_label (form.ferencia,'Referencia') }}  
						{{ form_widget (form.ferencia, { 'attr': {'class':"input-block-level",}}
						)}}
					</div>
					<div class="span2">

					    {{ form_errors (form.peso) }} 
						{{ form_label (form.peso,'Peso') }}  
						{{ form_widget (form.peso, { 'attr': {'class':"input-block-level",}}
						)}}
					</div>					
				</div>
				<div class="span12">
						{{ form_errors (form.asunto) }} 
						{{ form_label (form.asunto) }}  
						{{ form_widget (form.asunto, 
							{ 'attr': 
								{
								'class':"input-block-level",

								}}
						)}}
				</div>
				<div class="span12">
					<div class="span4">
							{{ form_errors (form.descripcion) }} 
							{{ form_label (form.descripcion) }}  
							{{ form_widget (form.descripcion)}}
					</div>
					<div class="span4">
							{{ form_errors (form.sumilla) }} 
							{{ form_label (form.sumilla,'Contenido') }}  
							{{ form_widget (form.sumilla)}}
					</div>
					<div class="span4">
							{{ form_errors (form.origen) }} 
							{{ form_label (form.origen) }}  
							{{ form_widget (form.origen )}}
					</div>
				</div>
				<div class="span12">
							{{ form_errors (form.observaciones) }} 
							{{ form_label (form.observaciones) }}  
							{{ form_widget (form.observaciones)}}
							{{ form_widget(form._token) }}				
				</div>
	            <div class="span12">
		            <br>
		        		<button class="btn btn-primary"type="submit"><i class="icon-save"></i> Guardar</button>
		        		<a class="btn btn-inverse" href="{{ path('hremision') }}"><i class="icon-reply"></i>
			             Regresar
			        	</a>
		    		</br>
	            </div>
			</form>
		</div>
	</div>
</div>
{% endblock body %}