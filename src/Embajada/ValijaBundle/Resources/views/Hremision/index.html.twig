{% extends "::base8.html.twig" %}
{% block body %}
                <div class="row-fluid">
                    <div class="span12">
                        <div class="box box-color box-bordered green">
                            <div class="box-title">
                                <h3>
                                    <i class="icon-table"></i>
                                    Hojas de Remisi√≥n
                                </h3>
                            </div>
                            <div class="box-content nopadding">
                                <table class="table table-hover table-nomargin table-striped dataTable dataTable-reorder">  
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Numero</th>
                                        <th>Destino</th>
                                        <th>Asunto</th>
                                        <th>Fecha</th>
                                        <th>Refencia</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for entity in entities %}
                                    <tr>
                                        <td><a href="{{ path('hremision_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                        <td>{{ entity.numero }}</td>
                                        <td>{{ entity.destino }}</td>
                                        <td>{{ entity.asunto }}</td>
                                        <td>{% if entity.fecha %}{{ entity.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
                                        <td>{{ entity.ferencia }}</td>

                                        <td>
                                            <ul>
                                                <li>
                                                    <a href="{{ path('hremision_show', { 'id': entity.id }) }}">show</a>
                                                </li>
                                                <li>
                                                    <a href="{{ path('hremision_edit', { 'id': entity.id }) }}">edit</a>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

<ul>
    <li>
        <a href="{{ path('hremision_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock body %}
