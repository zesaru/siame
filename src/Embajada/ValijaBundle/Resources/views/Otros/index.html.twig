{% extends "::base8.html.twig" %}
{% block body %}
<style>
.enlaces {
    color: red;
    font-size: 16px;
}
.icon-ok-sign{
    color: green;
    font-size: 12px;

}
table tr td .aprobado{
    text-align: center;
}
</style>
<div class="row-fluid">
    <div class="span12">
        <div class="box box-color box-bordered green">
            <div class="box-title">
                <h3><a class="btn btn-success" href="{{ path('otros_new') }}"><i class="icon-plus-sign"></i>Agregar Otro Item</a></h3>
            </div>
        </div>
        <div class="box-content nopadding">
            <table class="table table-hover table-nomargin table-striped dataTable dataTable-reorder">
                <thead>
        <tr>
            <th>Id</th>
            <th>Destinatario</th>
            <th>Contenido</th>
            <th>Remitente</th>
            <th>Peso</th>
            <th>Fecha</th>
            <th>Estado</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('otros_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.destinatario }}</td>
            <td>{{ entity.contenido }}</td>
            <td>{{ entity.remitente }}</td>
            <td>{{ entity.peso }}</td>
            <td>{% if entity.fecha %}{{ entity.fecha|date('Y-m-d') }}{% endif %}</td>
            <td>{{ entity.estado }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('otros_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('otros_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

        </div>
    </div>
</div>
{% endblock body %}
