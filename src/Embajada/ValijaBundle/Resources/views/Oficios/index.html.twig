{% extends "::base8.html.twig" %}
{% block body %}
<style>
a{
    color: red;
    font-size: 16px;
}
.boton{
    background-color:#368EE0;
    color: white;
    font-weight: bold;
    margin-top: 5em;
    padding: 0.5em;
    text-decoration: none; 
}
ul{
    margin-top: 2em;
}
li{
    list-style-type: none;
}
.icon-ok-sign{
    color: green;
    font-size: 1.4em;
}
table tr td .aprobado{
    text-align: center;
}
</style>
<div class="row-fluid">
    <div class="span12">
        <div class="box box-color box-bordered green">
            <div class="box-title">
                <h3>
                <a class="btn btn-success" href="{{ path('Oficios_new') }}"><i class="icon-plus-sign" style="font-size:16px"></i>
                    Agregar Oficios
                </a></h3>
            </div>
                <div class="box-content nopadding">
                    <table class="table table-hover table-nomargin table-striped dataTable dataTable-reorder">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Numero de Oficio</th>
                                <th>Asunto</th>
                                <th>Fecha</th>
                                <th>Referencia</th>
                                <th>Clasificacion</th>
                                <th>Aprobado</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td><a href="{{ path('Oficios_pdf', { 'id': entity.id }) }}"><i class="icon-file"></i></a></td>
                                <td>{{ entity.numerodeoficio }}</td>
                                <td>{{ entity.asunto }}</td>
                                <td>{{ entity.fecha|date('d-m-Y')}}</td>
                                <td>{{ entity.referencia }}</td>
                                <td>{{ entity.clasificacion }}</td>
                                <td>{{ entity.aprobado }}</td>
                                <td>

                                            <a href="{{ path('Oficios_edit', { 'id': entity.id }) }}">editar</a>

                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock body %}