{% extends "::base8.html.twig" %}
{% block body %}
                <div class="row-fluid">
                    <div class="span12">
                        <div class="box box-color box-bordered green">
                            <div class="box-title">
                                <h3>
                                    <i class="icon-table"></i>
                                    Contactos
                                </h3>
                            </div>
                            <div class="box-content nopadding">
                                <table class="table table-hover table-nomargin table-striped dataTable dataTable-reorder">    
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Categoria</th>
                                    <th>Vocativo</th>
                                    <th>Nombres</th>
                                    <th>Apellidos</th>
                                    <th>Titulo1</th>
                                    <th>Organizacion</th>
                                    <th class='hidden-1024'>Observaciones</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for entity in entities %}
                                <tr>
                                    <td><a href="{{ path('contactos_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                    <td>{{ entity.categoria.nombre }}</td>
                                    <td>{{ entity.vocativo }}</td>
                                    <td>{{ entity.nombres }}</td>
                                    <td>{{ entity.apellidos }}</td>
                                    <td>{{ entity.titulo1 }}</td>
                                    <td>{{ entity.organizacion }}</td>
                                    <td>{{ entity.observaciones }}</td>
                                    <td>
                                        <ul>
                                            <li>
                                                <a href="{{ path('contactos_edit', { 'id': entity.id }) }}">editar</a>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                            </table>
                            </div>
                        </div>
                    </div>
                </div>
<ul>
    <li>
        <a href="{{ path('contactos_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock body %}