<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pdf SYSTEM "%resources%/dtd/doctype.dtd">
<pdf>
  <dynamic-page encoding="UTF-8" font-type="DejaVuSans"> 
 <h2>Lista de Invitados </h2>
 <table border="1">
    <thead>
        <tr>
            <th width="12%">Categoria</th>
            <th width="10%">Vocativo</th>
            <th width="18%">Apellido </th>
            <th width="18%">Nombre  </th>
            <th width="23%">Titulo</th>
            <th width="30%">Organizacion</th>
            <th  width="4%">Hora</th>
        </tr>
    </thead>
    <tbody>
         {% for entity in entities %}
        <tr>
            <td width="12%">{{ entity.categoria.nombre }}</td>
            <td width="10%">{{ entity.vocativo }}</td>
            <td width="18%">{{ entity.apellidos }}</td>
            <td width="18%">{{ entity.nombres }}</td>
            <td width="23%">{{ entity.titulo1 }}</td>
            <td width="30%">{{ entity.organizacion }}</td>
            <td width="4%">{{ entity.observaciones }}</td>
        </tr>
    </tbody>
        {% endfor %} 
</table>
</dynamic-page>
</pdf> 