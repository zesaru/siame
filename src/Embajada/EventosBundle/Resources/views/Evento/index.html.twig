{% extends "::base8.html.twig" %}
{% block body %}

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Vocativo</th>
            <th>Cantidad</th>
            <th>Horadeinvitacion</th>
            <th>Fechalainvitacion</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('evento_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.contacto.vocativo }}</td>
            <td>{{ entity.contacto.nombres }}</td>
            <td>{{ entity.horadeinvitacion }}</td>
            <td>{% if entity.fechalainvitacion %}{{ entity.fechalainvitacion|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('evento_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('evento_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('evento_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock body %}